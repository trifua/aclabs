<p id="notice"><%= notice %></p>

<h1>Ammounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Quantity</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ammounts.each do |ammount| %>
      <tr>
        <td><%= ammount.user_id %></td>
        <td><%= ammount.quantity %></td>
        <td><%= ammount.currency_id %></td>
        <td><%= link_to 'Show', ammount %></td>
        <td><%= link_to 'Edit', edit_ammount_path(ammount) %></td>
        <td><%= link_to 'Destroy', ammount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ammount', new_ammount_path %>
