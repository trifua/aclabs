
<div class = "container" style = "margin-top: 150px;">
	<div class="row" >
		<div class = "col-md-4 col-md-offset-4" >
			<div class = "login-panel panel panel-default" style="background-color: bg-info;">
				<!-- <div class ="panel-heading">
					<h3 class = "panel-title">Please Log In</h3>
				</div> -->

				<div class = "panel-body">
				<% if flash[:alert]%>
					<p id = "notice"> <%=flash[:alert] %></p>
				<%end%>

				<%= form_with(model:@user, url: '/signup') do |form| %>

				<fieldset>
					<legend>Enter User Details</legend>
					<div class ="form-group">
						<%= form.label :name%><br>
						<%= form.text_field :name, id: :user_name%>
					</div>
					<div class ="form-group">
						<%= form.label :password%><br>
						<%= form.text_field :password, id: :user_password%>
					</div>
					<div class ="form-group">
						<%= form.label :password_confirmation%><br>
						<%= form.text_field :password_confirmation, id: :user_password_confirmation%>
					</div>
					<div class="actions">
						<%= form.submit :class => 'btn btn-info'%>
					</div>
				</fieldset>
				<%end%>
				</div>
			</div>
		</div>
	</div>
</div>
