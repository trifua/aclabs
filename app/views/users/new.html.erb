<div class="card card-body bg-info text-center">
	<h1>New User</h1>
	<% if flash[:alert] %>
		<p id="notice">
			<%= flash[:alert]%>
		</p>
	<% end %>
	<%= form_with(model: @user, url: '/signup') do |form| %>
		<fieldset>
			<legend>Enter User Details</legend>
			<div class="form-group">
				<%= form.label :name %>
					<%= form.text_field :name, id: :user_name, :class => 'form-control text-center' %>
			</div>

			<div class="form-group">
				<%= form.label :password %>
					<%= form.password_field :password, id: :user_password, :class => 'form-control text-center' %>
			</div>

			<div class="form-group">
				<%= form.label :password_confirmation %>
					<%= form.password_field :password_confirmation, id: :user_password_confirmation, :class => 'form-control text-center' %>
			</div>

			<div class="form-group">
				<%= form.submit  'Sign Up', :class => 'btn btn-success' %>
			</div>
		</fieldset>
	<% end %>
</div>