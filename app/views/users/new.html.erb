<h1>New User</h1>
<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
	<% end %>
<div class='row'>
<div class='col-xs-12'>

<%= form_with(model: @user, url:'/signup', :html => {class: "form-horizontal", role: "form"}) do |form| %>
	 <div class="form-group">

<div class="control-label col-sm-2">

			<%= form.label :name %>
			 </div>

<div class="col-sm-8">
			<%= form.text_field :name, id: :user_name, class: "form-control",autofocus: true  %>
 </div>

</div>

 <div class="form-group">

<div class="control-label col-sm-2">
			<%= form.label :password %>
			</div>
			<div class="col-sm-8">
			<%= form.password_field :password, id: :user_password, class: "form-control"%>
 </div>

</div>

 <div class="form-group">

<div class="control-label col-sm-2">

			<%= form.label :password_confirmation %>
		</div>
		<div class="col-sm-8">
			<%= form.password_field :password_confirmation, id: :user_password_confirmation, class: "form-control" %>
 </div>

</div>

		 <div class="form-group">

<div class="col-sm-offset-2 col-sm-10">
			<%= form.submit class: 'btn btn-primary btn-lg'%>
		</div>
</div>
<% end %>
</div>
</div>