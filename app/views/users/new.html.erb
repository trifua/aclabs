<div class="row">
	<div class="col-lg-12">
		<h1>Create New User</h1>
		<% if flash[:alert] %>
			<p id="notice" style="color: red;"><%= flash[:alert] %></p>
		<% end %>
		<%= form_with(model: @user, url: '/signup') do |form| %>
			<fieldset>
				<legend>Enter User Details</legend>

				<div class="field">
					<%= form.label :name %>
					<br>
					<%= form.text_field :name, id: :user_name %>
				</div>

				<br>

				<div class="field">
					<%= form.label :password %>
					<br>
					<%= form.text_field :password, id: :user_password, :type => "password" %>
				</div>

				<br>

				<div class="field">
					<%= form.label :password_confirmation %>
					<br>
					<%= form.text_field :password_confirmation, id: :user_password_confirmation, :type => "password" %>
				</div>

				<br>

				<div class="actions">
					<%= form.submit 'Create user', :class => "btn btn-primary" %>
				</div>

			</fieldset>
		<% end %>
	</div>
</div>
