<p id="notice"><%= notice %></p>

<h1>Amounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Currency</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amounts.each do |amount| %>
      <tr>
        <td><%= amount.user_id %></td>
        <td><%= amount.currency_id %></td>
        <td><%= amount.quantity %></td>
        <td><%= link_to 'Show', amount %></td>
        <td><%= link_to 'Edit', edit_amount_path(amount) %></td>
        <td><%= link_to 'Destroy', amount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Amount', new_amount_path %>
