
<div class = "container" style = "margin-top: 150px;">
	<div class="row" >
		<div class = "col-md-4 col-md-offset-4" >
			<div class = "login-panel panel panel-default" style="background-color: seashell;">
				<!-- <div class ="panel-heading">
					<h3 class = "panel-title">Please Log In</h3>
				</div> -->

				<div class = "panel-body">
					<% if flash[:alert] %>
					<div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button> <%=flash[:alert] %> </div>
					<%end%>

					<%= form_tag do %>
					<fieldset>
						<legend>Please Log In</legend>
						<div class ="form-group">
							<%= label_tag :name,'Name:'%><br>
							<%= text_field_tag :name, '',:class => 'form_control  text_center'%>
						</div>
						<div class="form-group">
							<%= label_tag :password, 'Password:'%><br>
							<%= text_field_tag :password, '',:class => 'form_control text_center'%>
						</div>
						<div form-group>
							<%= submit_tag "Login", :class => 'btn' %>
						</div>
						<div class="form-group">
							<p>If you don't have an account please <%= link_to 'Sign up', signup_url %></p>
						</div>
					</fieldset>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>
